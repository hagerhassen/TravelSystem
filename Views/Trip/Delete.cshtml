@model TripPost

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<br />
<h2 class="text-info">Delete Trip Post</h2>
<br />

<form asp-action="Delete" method="post">
    <div class="form-row">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <!-- Image Here -->

        <div class="form-group col-md-6">
            <label asp-for="AgencyName">Trip Name</label>
            <input type="text" class="form-control" asp-for="AgencyName" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Title">Trip Title</label>
            <input type="text" class="form-control" asp-for="Title" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Destination">Trip Destination</label>
            <input type="text" class="form-control" asp-for="Destination" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Details">Trip Details</label>
            <input type="text" class="form-control" asp-for="Details" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Date">Trip Data</label>
            <input type="date" class="form-control" asp-for="Date" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PostDate">Post Date</label><br />
            <input type="date" class="form-control" asp-for="PostDate" readonly />
        </div>
    </div>

    <hr class="my-4" />

    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DeleteAndBackButtonsPartial" />
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}