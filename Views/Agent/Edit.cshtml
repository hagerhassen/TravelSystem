@model ApplicationUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<br />
<h2 class="text-info">Edit Profile</h2>
<br />
<div class="whiteBackground border row">
    <form asp-action="Edit" method="post">
        <div class="row mt-5 align-items-center">
            <div class="col-md-3 text-center mb-5">
                <div class="avatar avatar-xl">
                    <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="..." class="avatar-img rounded-circle" />
                </div>
            </div>
        </div>
        <hr class="my-4" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="col-form-label" asp-for="@Model.FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="@Model.FirstName" />
            </div>
            <div class="form-group col-md-6">
                <label class="col-form-label" asp-for="@Model.LastName">Last Name</label>
                <input type="text" class="form-control" asp-for="@Model.LastName" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.Email">Email Address</label>
            <input type="text" class="form-control" asp-for="@Model.Email" />
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.UserName">Username</label>
            <input type="text" class="form-control" asp-for="@Model.UserName" />
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="col-form-label" asp-for="@Model.PhoneNumber">Phone Number</label>
                <input type="text" class="form-control" asp-for="@Model.PhoneNumber" />
            </div>
            <div class="form-group col-md-6">
                <label class="col-form-label">Role</label>
                <select class="form-control" disabled>
                    <option selected="">Agent</option>
                </select>
            </div>
        </div>
