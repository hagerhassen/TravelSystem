@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<link href="~/css/site.css" rel="stylesheet" />

<h3 class="text-center text-uppercase">Your Profile</h3>
<h6 class="text-center text-uppercase">You Can Manage It</h6>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <div class="my-4">
                <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false">Profile</a>
                    </li>
                </ul>

                @*<div class="row mt-5 align-items-center">
            <div class="col-md-3 text-center mb-5">
                <div class="avatar avatar-xl">
                    <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="..." class="avatar-img rounded-circle" />
                </div>
            </div>
        </div>*@

                @foreach (var item in Model)
                {
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="col-form-label" asp-for="@item.FirstName">First Name</label>
                            <input type="text" class="form-control" asp-for="@item.FirstName" readonly />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label" asp-for="@item.LastName">Last Name</label>
                            <input type="text" class="form-control" asp-for="@item.LastName" readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="@item.Email">Email Address</label>
                        <input type="text" class="form-control" asp-for="@item.Email" readonly />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="@item.UserName">Username</label>
                        <input type="text" class="form-control" asp-for="@item.UserName" readonly />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="col-form-label" asp-for="@item.PhoneNumber">Phone Number</label>
                            <input type="text" class="form-control" asp-for="@item.PhoneNumber" readonly />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Role</label>
                            <select class="form-control" disabled>
                                <option>Agent</option>
                            </select>
                        </div>
                    </div>
                    <hr class="my-4" />
                    <partial name="_OperationEditProfileButtonPartial" model="item.Id" />
                }
            </div>
        </div>
    </div>
</div>
